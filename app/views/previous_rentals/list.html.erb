<div class="row">
  <div class="col-md-4">
    <h1>Rented Books</h1>
  </div>
</div>
<table id="books_table" class="table table-striped table-bordered">
  <thead class="thead-dark">
  <tr>
    <th scope="col">Cover</th>
    <th scope="col">Title</th>
    <th scope="col">Author</th>
    <th scope="col">Isbn</th>
    <th scope="col">Description</th>
    <th scope="col"></th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag(book.image, :class => "thumbnail rounded") if book.image.attached? %></td>
      <td><%= link_to(book.title, book) %></td>
      <td><%= link_to(book.author.name, book.author) if !book.author.nil? %></td>
      <td><%= book.isbn %></td>
      <td class="more"><%= book.description %></td>
      <td><%= link_to 'Delete',
                      previous_rentals_destroy_path(book),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %> </td>
      <td><%= link_to 'Read',
                      read_content_read_path(book),
                      method: :get %> </td>
    </tr>
  <% end %>
  </tbody>
</table>

<hr>

<div class="row">
  <div class="col-md-5">
    <h1>Rented Magazines</h1>
  </div>
</div>
<table id="magazines_table" class="table table-striped table-bordered">
  <thead class="thead-dark">
  <tr>
    <th>Cover</th>
    <th scope="col">Name</th>
    <th>Publisher</th>
    <th scope="col">Description</th>
    <th scope="col"></th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  <% @magazines.each do |magazine| %>
    <tr>
      <td><%= image_tag(magazine.image, :class => "thumbnail rounded") if magazine.image.attached? %></td>
      <td><%= link_to(magazine.name, magazine) %></td>
      <td><%= link_to(magazine.publisher.name, magazine.publisher) %></td>
      <td class="more"><%= magazine.description %></td>
      <td><%= link_to 'Delete',
                      magazine_path(magazine),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %> </td>
      <td><%= link_to 'Read',
                      read_content_read_path(magazine),
                      method: :get %> </td>
    </tr>
  <% end %>
  </tbody>
</table>
