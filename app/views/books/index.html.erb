<div class="row">
    <div class="col-md-4">
        <h1>List of Books</h1>
    </div>
    <div class="col-md-2 offset-md-6 text-right my-auto">
    <%= link_to '<button class="btn btn-success">
            Create
        </button>'.html_safe, "/books/new" %>
    </div>
</div>
<table id="books_table" class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Cover</th>
      <th scope="col">Title</th>
      <th scope="col">Author</th>
      <th scope="col">Isbn</th>
      <th scope="col">Description</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag(book.image, :class => "thumbnail rounded") if book.image.attached? %></td>
        <td><%= link_to(book.title, book) %></td>
        <td><%= link_to(book.author.name, book.author) if !book.author.nil? %></td>
        <td><%= book.isbn %></td>
        <td class="more"><%= book.description %></td>
        <td><%= link_to 'Delete',
                         book_path(book),
                         method: :delete,
                         data: { confirm: 'Are you sure?' } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
