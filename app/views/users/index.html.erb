<div class="row">
  <div class="col-md-4">
    <h1>List of Users</h1>
  </div>
</div>
<table id="books_table" class="table table-striped table-bordered">
  <thead class="thead-dark">
  <tr>
    <th scope="col">Username</th>
    <th scope="col">Email</th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to(user.username, user) %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Delete',
                      user_path(user),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %> </td>
    </tr>
  <% end %>
  </tbody>
</table>
